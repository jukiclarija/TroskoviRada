@model TroskoviRada.Models.TipNaknade
@{
    ViewData["Title"] = "Dodaj naknadu";
}

<h1 class="main-header">DODAJ NAKNADU</h1>

<div class="form-container">
    <h2 class="sub-header">Dodaj novu naknadu</h2>

    <form asp-action="DodajNaknadu">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Naziv" class="form-label">Naziv *</label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Iznos" class="form-label">Iznos *</label>
                    <input asp-for="Iznos" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Iznos" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Opis" class="form-label">Opis</label>
            <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="alert alert-warning mb-3">
            <strong>* Obavezna polja</strong>
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary w-100">SPREMI</button>
            </div>
            <div class="col-md-6">
                <a asp-action="Naknade" class="btn btn-secondary w-100">ODUSTANI</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}