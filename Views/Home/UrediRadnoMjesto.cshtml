@model TroskoviRada.Models.RadnoMjesto
@{
    ViewData["Title"] = "Uredi radno mjesto";
}

<h1 class="main-header">UREDI RADNO MJESTO</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UrediRadnoMjesto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRadnoMjesto" />

            <div class="form-group mb-3">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Satnica" class="control-label"></label>
                <input asp-for="Satnica" class="form-control" />
                <span asp-validation-for="Satnica" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
                <a asp-action="RadnaMjesta" class="btn btn-secondary">Odustani</a>
            </div>
        </form>
    </div>
</div>