@{
    ViewData["Title"] = "Uredi naknade zaposleniku";
    var zaposlenik = ViewBag.Zaposlenik as TroskoviRada.Models.Zaposlenik;
    var sveNaknade = ViewBag.SveNaknade as List<TroskoviRada.Models.TipNaknade>;
    var trenutneNaknadeIds = ViewBag.TrenutneNaknadeIds as List<int> ?? new List<int>();
}

<h1>Uredi naknade za: @zaposlenik?.PunoIme</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="UrediNaknadeZaposleniku" method="post">
            <input type="hidden" name="id" value="@zaposlenik?.IdZaposlenik" />

            <div class="form-group">
                <label class="control-label">Odaberite naknade:</label>
                <div id="naknadeContainer" class="border p-3 rounded" style="max-height: 400px; overflow-y: auto;">
                    @if (sveNaknade != null) {
                        foreach (var naknada in sveNaknade) {
                            var isChecked = trenutneNaknadeIds.Contains(naknada.IdTipNaknade);

                            <div class="form-check mb-3">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedNaknadeIds"
                                       value="@naknada.IdTipNaknade"
                                       id="naknada_@naknada.IdTipNaknade"
                                       @(isChecked ? "checked" : "") />
                                <label class="form-check-label d-flex justify-content-between w-100"
                                       for="naknada_@naknada.IdTipNaknade">
                                    <div>
                                        <strong>@naknada.Naziv</strong>
                                        @if (!string.IsNullOrEmpty(naknada.Opis)) {
                                            <br />
                                
                                            <small class="text-muted">@naknada.Opis</small>
                                        }
                                    </div>
                                    <div class="text-right">
                                        @if (naknada.JePostotak) {
                                            <span class="badge badge-primary">@naknada.Iznos.ToString("P0")</span>
                                            <br />

                                            <small class="text-muted">% od osnovice</small>
                                        } else {
                                            <span class="badge badge-success">@naknada.Iznos.ToString("C")</span>
                                            <br />

                                            <small class="text-muted">po danu</small>
                                        }
                                    </div>
                                </label>
                            </div>
                            <hr class="my-2" />
                        }
                    }
                </div>
            </div>

            <div class="form-group">
                <label for="DatumPromjene" class="control-label">Datum promjene naknada</label>
                <input type="date" id="DatumPromjene" name="DatumPromjene"
                       class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                <small class="form-text text-muted">Od ovog datuma će se primjenjivati nove naknade.</small>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Spremi promjene
                </button>
                <a asp-action="Zaposlenici" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Odustani
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Trenutne naknade</h5>
            </div>
            <div class="card-body">
                @if (zaposlenik?.Naknade != null && zaposlenik.Naknade.Any()) {
                    <ul class="list-unstyled">
                        @foreach (var naknada in zaposlenik.Naknade) {
                            <li class="mb-2">
                                <i class="fas fa-check text-success mr-2"></i>
                                @naknada.TipNaknade.Naziv
                                <small class="text-muted">(od @naknada.Datum.ToString("dd.MM.yyyy."))</small>
                            </li>
                        }
                    </ul>
                } else {
                    <p class="text-muted">Zaposlenik trenutno nema dodijeljenih naknada.</p>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Napomena</h5>
            </div>
            <div class="card-body">
                <p class="small">
                    <strong>Postotne naknade:</strong> Računaju se kao postotak od osnovice (npr. prekovremeni).
                    <br /><br />
                    <strong>Fiksne naknade:</strong> Dodaju se u iznosu po danu prisustva (npr. prijevoz, obrok).
                    <br /><br />
                    Promjene će se primijeniti od odabranog datuma.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Select all / Deselect all funkcionalnost
            const selectAllBtn = document.createElement('button');
            selectAllBtn.type = 'button';
            selectAllBtn.className = 'btn btn-sm btn-outline-secondary mb-2';
            selectAllBtn.innerHTML = '<i class="fas fa-check-square"></i> Odaberi sve';

            const deselectAllBtn = document.createElement('button');
            deselectAllBtn.type = 'button';
            deselectAllBtn.className = 'btn btn-sm btn-outline-secondary mb-2 ml-2';
            deselectAllBtn.innerHTML = '<i class="fas fa-square"></i> Poništi odabir';

            const container = document.getElementById('naknadeContainer');
            container.parentNode.insertBefore(selectAllBtn, container);
            container.parentNode.insertBefore(deselectAllBtn, container);

            selectAllBtn.addEventListener('click', function() {
                document.querySelectorAll('.form-check-input').forEach(cb => cb.checked = true);
            });

            deselectAllBtn.addEventListener('click', function() {
                document.querySelectorAll('.form-check-input').forEach(cb => cb.checked = false);
            });
        });
    </script>
}